<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="datos.Cuota" table="cuota">
		<id column="idCuota" name="idCuota">
			<generator class="identity" />
		</id>
		<property column="nroCuota" name="nroCuota" type="int" />
		<property column="fechaVencimiento" name="fechaVencimiento" type="calendar" />
		<property column="saldoPendiente" name="saldoPendiente" type="float" />
		<property column="amortizacion" name="amortizacion" type="float" />
		<property column="interesCuota" name="interesCuota" type="float" />
		<property column="cuota" name="cuota" type="float" />
		<property column="deuda" name="deuda" type="float" />
		<property column="cancelada" name="cancelada" type="boolean" />
		<property column="fechaDePago" name="fechaDePago" type="calendar" />
		<property column="punitorios" name="punitorios" type="float" />
		
		<many-to-one name="prestamo" class="datos.Prestamo" column="idPrestamo" not-null="true"/>
	</class>
</hibernate-mapping>